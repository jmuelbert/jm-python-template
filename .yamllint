---
extends: default
ignore: |
  LICENSES/
  assets/translations/
  node_modules/
  pnpm-lock.yaml
  .venv/
strict: true
format: parsable

rules:
  braces:
    max-spaces-inside: 1
    min-spaces-inside: 0

  brackets:
    max-spaces-inside: 1
    min-spaces-inside: 0

  colons:
    max-spaces-after: 1

  commas:
    max-spaces-after: 1
    min-spaces-after: 0

  comments:
    level: warning
    min-spaces-from-content: 1

  document-start: enable

  empty-lines:
    max-end: 0
    max-start: 0

  indentation: disable

  line-length:
    max: 100
    allow-non-breakable-inline-mappings: true
    level: warning

  new-lines:
    type: unix

  quoted-strings:
    quote-type: double
    required: only-when-needed

  trailing-spaces: enable

  truthy:
    allowed-values: ["true", "false"]
